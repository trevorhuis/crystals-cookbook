---
const { frontmatter } = Astro.props;
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Funnel+Sans:ital,wght@0,300..800;1,300..800&family=Playfair+Display:ital,wght@0,400..900;1,400..900&display=swap"
            rel="stylesheet"
        />

        <title>{frontmatter.title} | Crystal's Cookbook</title>
        <meta name="description" content={frontmatter.description} />
    </head>
    <body>
        <header class="site-header">
            <nav class="nav-container">
                <a class="site-title" href="/">Crystal's Cookbook</a>
                <a class="back-link" href="/">‚Üê Back to Recipes</a>
            </nav>
        </header>

        <main class="main-content">
            <article class="recipe-article">
                <div class="recipe-header">
                    <p class="recipe-description">{frontmatter.title}</p>
                </div>

                <div class="recipe-content">
                    <slot />
                </div>
            </article>
        </main>

        <footer class="site-footer">
            <p>&copy; 2025 Crystal's Cookbook. Made with love and Astro.</p>
        </footer>
    </body>
</html>

<style is:global>
    :root {
        --color-primary: #2c5530;
        --color-primary-light: #4a7c59;
        --color-secondary: #1a3a1e;
        --color-accent: #7fb069;
        --color-text: #2d2d2d;
        --color-text-light: #666;
        --color-background: #fefefe;
        --color-surface: #ffffff;
        --color-border: #e5e5e5;
        --color-shadow: rgba(0, 0, 0, 0.1);

        --font-heading: "Playfair Display", serif;
        --font-body: "Funnel Sans", sans-serif;

        --spacing-xs: 0.5rem;
        --spacing-sm: 1rem;
        --spacing-md: 1.5rem;
        --spacing-lg: 2rem;
        --spacing-xl: 3rem;

        --border-radius: 12px;
        --border-radius-lg: 20px;

        --shadow-sm: 0 2px 4px var(--color-shadow);
        --shadow-md: 0 4px 12px var(--color-shadow);
        --shadow-lg: 0 8px 24px var(--color-shadow);
    }

    * {
        box-sizing: border-box;
    }

    html {
        scroll-behavior: smooth;
    }

    body {
        margin: 0;
        font-family: var(--font-body);
        font-size: 16px;
        line-height: 1.6;
        color: var(--color-text);
        background-color: var(--color-background);
        min-height: 100vh;
        display: flex;
        flex-direction: column;
    }

    .site-header {
        background: var(--color-surface);
        border-bottom: 1px solid var(--color-border);
        box-shadow: var(--shadow-sm);
        position: sticky;
        top: 0;
        z-index: 100;
    }

    .nav-container {
        max-width: 1200px;
        margin: 0 auto;
        padding: var(--spacing-sm) var(--spacing-md);
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .site-title {
        font-family: var(--font-heading);
        font-size: 1.8rem;
        font-weight: 700;
        color: var(--color-primary);
        text-decoration: none;
        transition: color 0.2s ease;
    }

    .site-title:hover {
        color: var(--color-primary-light);
    }

    .back-link {
        color: var(--color-text-light);
        text-decoration: none;
        font-weight: 500;
        transition: color 0.2s ease;
    }

    .back-link:hover {
        color: var(--color-primary);
    }

    .main-content {
        flex: 1;
        max-width: 900px;
        margin: 0 auto;
        padding: var(--spacing-xl) var(--spacing-md);
        width: 100%;
    }

    .recipe-article {
        background: var(--color-surface);
        border-radius: var(--border-radius-lg);
        box-shadow: var(--shadow-lg);
        overflow: hidden;
    }

    .recipe-header {
        background: linear-gradient(
            135deg,
            var(--color-primary) 0%,
            var(--color-primary-light) 100%
        );
        color: white;
        padding: var(--spacing-xl) var(--spacing-lg);
        text-align: center;
    }

    .recipe-title {
        font-family: var(--font-heading);
        font-size: 2.5rem;
        font-weight: 700;
        margin: 0 0 var(--spacing-sm) 0;
        text-shadow: 0 2px 4px rgba(0, 0, 0, 0.3);
    }

    .recipe-description {
        font-size: 3rem;
        margin: 0;
        opacity: 0.95;
    }

    .recipe-content {
        padding: 0 var(--spacing-lg);
    }

    h1 {
        display: none;
    }

    h2 {
        font-family: var(--font-heading);
        font-size: 1.8rem;
        color: var(--color-primary);
        margin: var(--spacing-xl) 0 var(--spacing-md) 0;
        border-bottom: 2px solid var(--color-accent);
        padding-bottom: var(--spacing-xs);
    }

    h3 {
        font-family: var(--font-heading);
        font-size: 1.3rem;
        color: var(--color-secondary);
        margin: var(--spacing-lg) 0 var(--spacing-sm) 0;
    }

    p {
        margin: var(--spacing-sm) 0;
        line-height: 1.7;
    }

    img {
        border-radius: var(--border-radius);
        max-width: 100%;
        height: auto;
        display: block;
        margin: var(--spacing-lg) auto;
        box-shadow: var(--shadow-md);
    }

    ul,
    ol {
        margin: var(--spacing-sm) 0;
        padding-left: var(--spacing-lg);
    }

    li {
        margin: var(--spacing-xs) 0;
        line-height: 1.6;
    }

    strong {
        color: var(--color-primary);
        font-weight: 600;
    }

    em {
        color: var(--color-text-light);
    }

    .site-footer {
        background: var(--color-primary);
        color: white;
        text-align: center;
        padding: var(--spacing-lg);
        margin-top: auto;
    }

    .site-footer p {
        margin: 0;
        opacity: 0.9;
    }

    @media (max-width: 768px) {
        .nav-container {
            padding: var(--spacing-sm);
        }

        .site-title {
            font-size: 1.5rem;
        }

        .main-content {
            padding: var(--spacing-lg) var(--spacing-sm);
        }

        .recipe-header {
            padding: var(--spacing-lg) var(--spacing-md);
        }

        .recipe-title {
            font-size: 2rem;
        }

        .recipe-content {
            padding: var(--spacing-lg) var(--spacing-md);
        }

        h2 {
            font-size: 1.5rem;
        }
    }

    @media (max-width: 480px) {
        .recipe-title {
            font-size: 1.7rem;
        }

        .recipe-description {
            font-size: 1rem;
        }

        h2 {
            font-size: 1.3rem;
        }
    }
</style>
